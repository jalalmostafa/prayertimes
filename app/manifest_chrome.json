{
    "name": "__MSG_longAppName__",
    "short_name": "__MSG_appName__",
    "homepage_url": "https://github.com/jalalmostafa/prayertimes",
    "minimum_chrome_version": "109",
    "version": "3.0.0",
    "version_name": "v3.0.0",
    "manifest_version": 3,
    "author": "Prayer Times",
    "description": "__MSG_appDescription__",
    "web_accessible_resources": [
        {
            "resources": [
                "*.woff",
                "*.ttf",
                "*.eot",
                "*.mp3"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "icons": {
        "16": "images/small-mosque.png",
        "128": "images/small-mosque.png"
    },
    "action": {
        "default_icon": {
            "19": "images/small-mosque.png",
            "38": "images/small-mosque.png"
        },
        "default_title": "Prayer Times",
        "default_popup": "popup.html"
    },
    "default_locale": "ar",
    "background": {
        "service_worker": "background.bundle.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "geolocation",
        "alarms",
        "notifications",
        "scripting",
        "offscreen"
    ],
    "host_permissions": [
        "https://maps.googleapis.com/",
        "http://ip-api.com/"
    ]
}
